        "x64-MSVC",
        "x64-windows-static",
        "Release",
        "Test"
      ]
    },
    {
      "name": "x64-Release-MSVC-Static-MD",
      "description": "Release build as static library with dynamic runtime with MSVC",
      "inherits": [
        "x64-MSVC",
        "x64-windows-static-md",
        "Release",
        "Test"
      ]
    },
    {
      "name": "x64-Release-Clang-Shared",
      "description": "Release build as shared library with Clang",
      "inherits": [
        "x64-Clang",
        "x64-windows",
        "Release",
        "Test"
      ]
    },
    {
      "name": "x64-Release-Clang-Static",
      "description": "Release build as static library with Clang",
      "inherits": [
        "x64-Clang",
        "x64-windows-static",
        "Release",
        "Test"
      ]
    },
    {
      "name": "x64-Release-Clang-Static-MD",
      "description": "Release build as static library with dynamic runtime with Clang",
      "inherits": [
        "x64-Clang",
        "x64-windows-static-md",
        "Release",
        "Test"
      ]
    }
  ],
